{
    "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Frak Wallet",
    "version": "0.0.26",
    "identifier": "id.frak.wallet",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:3000",
        "beforeDevCommand": "NODE_ENV=development TAURI_CLI_RUNNING=1 vite dev",
        "beforeBuildCommand": "bun run build"
    },
    "app": {
        "windows": [
            {
                "title": "Frak Wallet",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "disableInputAccessoryView": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://*.frak.id https://*.drpc.org https://*.pimlico.io wss://*.frak.id"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
