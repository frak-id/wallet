{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2023", "esnext", "dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{"name": "next"}],
    "types": ["bun-types"],
    "paths": {
      "@/*": ["./src/*"],
      "@backend-utils": ["../../services/backend/src/utils/index.ts"],
      "@backend-infrastructure": ["../../services/backend/src/infrastructure/index.ts"],
      "@backend-infrastructure/*": ["../../services/backend/src/infrastructure/*"]
    },
    "verbatimModuleSyntax": true
  },
  "include": [
    "./next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
