{
  "name": "@frak-labs/backend-elysia",
  "description": "Backend for Frak using Elysia",
  "version": "0.0.14",
  "private": true,
  "type": "module",
  "license": "GNU GPL 3.0",
  "scripts": {
    "lint": "biome lint .",
    "format:check": "biome check .",
    "format": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "dev": "bun sst dev bun dev:watch",
    "dev:env": "sst shell bun run scripts/envSetup.ts",
    "dev:watch": "bun run --watch src/index.ts",
    "build:docker": "docker build --tag \"elysia-dev\" .",
    "build": "bun build:package",
    "build:package": "bun run build.ts",
    "build:binary-linux-arm64": "bun build --compile --minify --target=bun-linux-arm64 --outfile ./server src/index.ts",
    "build:binary": "bun build --compile --minify --target=bun --outfile ./server src/index.ts",
    "start": "NODE_ENV=production bun dist/index.js",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cors": "^1.4.0",
    "@frak-labs/app-essentials": "workspace:*",
    "@frak-labs/core-sdk": "workspace:*",
    "@simplewebauthn/server": "^13.2.2",
    "@slack/web-api": "^7.12.0",
    "airtable": "^0.12.2",
    "async-mutex": "^0.5.0",
    "croner": "^9.1.0",
    "drizzle-orm": "^0.44.7",
    "elysia": "1.4.15",
    "iron-session": "^8.0.4",
    "jose": "^6.1.0",
    "ky": "^1.14.0",
    "lru-cache": "^11.2.2",
    "merkletreejs": "^0.6.0",
    "mongodb": "^6.20.0",
    "ox": "^0.9.14",
    "permissionless": "^0.2.57",
    "postgres": "^3.4.7",
    "solady": "^0.1.26",
    "sst": "3.17.25",
    "ua-parser-js": "^2.0.5",
    "viem": "catalog:",
    "web-push": "^3.6.7",
    "whatwg-url": "^15.1.0"
  },
  "devDependencies": {
    "@frak-labs/test-foundation": "workspace:*",
    "@types/web-push": "^3.6.4",
    "@types/whatwg-url": "^13.0.0",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.6",
    "pino-pretty": "^13.1.2",
    "typescript": "catalog:"
  },
  "module": "src/index.ts",
  "main": "./src/index.ts"
}