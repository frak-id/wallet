{
  "exclude": ["**/*.test.ts"],
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["es2023", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["bun-types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@backend-utils": ["utils/index.ts"],
      "@backend-common": ["common/index.ts"],
      "@backend-common/*": ["common/*"]
    }
  },
}
