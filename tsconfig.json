{
  "compilerOptions": {
    "lib": ["es2023"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "target": "esnext",
    "allowImportingTsExtensions": true
  },
  "include": ["**/*.ts", "global.d.ts"],
  "exclude": ["node_modules"]
}
