{
  "name": "frak-wallet",
  "version": "0.1.0",
  "description": "Simple demo of a future Frak Wallet",
  "private": true,
  "type": "module",
  "license": "GNU GPL 3.0",
  "scripts": {
    "dev": "pm2 start pm2.config.cjs",
    "dev:stop": "pm2 stop all",
    "dev:restart": "pm2 restart all",
    "dev:gui": "pm2 plus",
    "lint": "biome lint .",
    "format:check": "biome check .",
    "format": "biome check --write .",
    "deploy": "sst deploy --stage dev",
    "deploy:prod": "sst deploy --stage prod",
    "build:sdk": "cd packages/sdk && bun run build",
    "build:infra": "sst build --stage dev",
    "clean": "rimraf **/.open-next/ **/.next/ .sst/dist/ .sst/artifacts/",
    "update:deps": "npm-check-updates -ui -ws",
    "changeset": "changeset",
    "changeset:release": "bun run --cwd packages/sdk build && changeset publish",
    "changeset:version": "changeset version && bun install --lockfile-only",
    "knip": "knip"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@changesets/changelog-git": "^0.2.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@types/node": "^22.0.0",
    "knip": "^5.27.0",
    "npm-check-updates": "^16.14.20",
    "pm2": "^5.4.2",
    "rimraf": "^6.0.1",
    "sst": "2.43.4",
    "typescript": "^5.5.4"
  },
  "workspaces": [
    "packages/*",
    "example/*"
  ]
}
