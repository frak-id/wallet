{
  "name": "frak-wallet",
  "version": "0.1.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@pulumi/aws": "^6.82.2",
    "@pulumi/docker-build": "^0.0.12",
    "@pulumi/gcp": "^8.34.0",
    "@pulumi/kubernetes": "^4.23.0",
    "@pulumi/pulumi": "^3.177.0",
    "@types/node": "^24.9.1",
    "knip": "^5.66.2",
    "npm-check-updates": "^19.1.1",
    "rimraf": "^6.0.1",
    "sst": "3.17.5",
    "typedoc": "^0.28.14",
    "typedoc-plugin-frontmatter": "^1.3.0",
    "typedoc-plugin-inline-sources": "^1.3.0",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  },
  "description": "Frak ecosystem packages",
  "license": "GNU GPL 3.0",
  "packageManager": "bun@1.3.0",
  "private": true,
  "scripts": {
    "build:infra": "sst build --stage dev",
    "build:sdk": "bun run --cwd packages/rpc build && dirs=(core legacy react components); for d in ${dirs[@]}; do bun run --cwd sdk/${d} build; done",
    "changeset": "changeset",
    "changeset:release": "bun run --cwd packages/rpc publish && bun publish --cwd packages/rpc && dirs=(core legacy react components); for d in ${dirs[@]}; do bun run --cwd sdk/${d} publish && bun publish --cwd sdk/${d}; done",
    "changeset:version": "changeset version && bun install --lockfile-only",
    "clean": "rimraf **/.open-next/ **/.next/ .sst/dist/ .sst/artifacts/",
    "deploy": "sst deploy --stage dev",
    "deploy:example": "sst deploy --stage example",
    "deploy:prod": "sst deploy --stage prod",
    "deploy-gcp:prod": "sst deploy --stage gcp-production",
    "deploy-gcp:staging": "sst deploy --stage gcp-staging",
    "dev": "bun sst dev",
    "format": "biome check --write .",
    "format:check": "biome check .",
    "knip": "knip",
    "lint": "biome lint .",
    "test": "bun run --filter '*' test",
    "update:deps": "npm-check-updates -ui -ws",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "sdk/*",
      "example/*",
      "services/*"
    ]
  },
  "catalog": {
    "viem": "^2.38.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/node": "^24.9.1",
    "typescript": "^5.9.3",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "zustand": "^5.0.8",
    "wagmi": "^2.18.1",
    "@wagmi/core": "^2.22.1"
  },
  "dependencies": {
    "caniuse-lite": "^1.0.30001751"
  },
  "resolutions": {
    "caniuse-lite": "^1.0.30001751",
    "@wagmi/connectors": "file:.stubs/wagmi-connectors-stub"
  },
  "trustedDependencies": []
}
