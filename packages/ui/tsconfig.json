{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["es2023", "esnext", "dom", "dom.iterable"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "verbatimModuleSyntax": true
    },
    "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
