  "scripts": {
    "build": "bun run sw && sst bind remix vite:build",
    "dev": "bun run sw && sst bind remix vite:dev",
    "start": "sst bind remix-serve ./build/server/index.js",
    "lint": "biome lint .",
    "format:check": "biome check .",
