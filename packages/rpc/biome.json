{
    "root": false,
    "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
    "files": {
        "includes": ["**", "!dist"]
    },
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "linter": {
        "enabled": true,
        "rules": {
            "complexity": {
                "noExcessiveCognitiveComplexity": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf"
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "es5",
            "lineEnding": "lf"
        }
    }
}
