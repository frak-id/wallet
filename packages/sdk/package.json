{
  "name": "@frak-labs/nexus-sdk",
  "author": "Frak Labs",
  "maintainers": [
    {
      "name": "srod",
      "url": "https://twitter.com/srod"
    },
    {
      "name": "Quentin Nivelais",
      "url": "https://twitter.com/QNivelais"
    }
  ],
  "version": "0.0.23",
  "description": "Frak Wallet client SDK, helping any person to interact with the Frak wallet, and require the unlock of a premium article within the Frak ecosystem.",
  "repository": {
    "url": "https://github.com/frak-id/wallet",
    "directory": "packages/sdk"
  },
  "homepage": "https://docs.frak.id/wallet-sdk",
  "keywords": [
    "frak-labs",
    "nexus-wallet",
    "erc-4337",
    "eip-4337",
    "smart-wallet"
  ],
  "license": "GNU GPL 3.0",
  "sideEffects": false,
  "private": false,
  "type": "module",
  "files": [
    "/dist"
  ],
  "exports": {
    "./core": {
      "import": {
        "types": "./dist/core/index.d.ts",
        "default": "./dist/core/index.js"
      },
      "require": {
        "types": "./dist/core/index.d.cts",
        "default": "./dist/core/index.cjs"
      }
    },
    "./actions": {
      "import": {
        "types": "./dist/core/actions/index.d.ts",
        "default": "./dist/core/actions/index.js"
      },
      "require": {
        "types": "./dist/core/actions/index.d.cts",
        "default": "./dist/core/actions/index.cjs"
      }
    },
    "./interactions": {
      "import": {
        "types": "./dist/core/interactions/index.d.ts",
        "default": "./dist/core/interactions/index.js"
      },
      "require": {
        "types": "./dist/core/interactions/index.d.cts",
        "default": "./dist/core/interactions/index.cjs"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react/index.d.ts",
        "default": "./dist/react/index.js"
      },
      "require": {
        "types": "./dist/react/index.d.cts",
        "default": "./dist/react/index.cjs"
      }
    }
  },
  "scripts": {
    "lint": "biome lint .",
    "format:check": "biome check .",
    "format": "biome check --write .",
    "clean": "rimraf dist",
    "build": "tsup && bun run check-exports",
    "build:watch": "tsup --watch",
    "build:components": "rollup --config rollup.config.ts --configPlugin typescript",
    "build:components:watch": "rollup --config rollup.config.ts --configPlugin typescript --watch",
    "check-exports": "attw --pack --profile node16 ."
  },
  "peerDependencies": {
    "viem": "^2.x",
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18"
  },
  "dependencies": {
    "async-lz-string": "^1.1.0",
    "js-sha256": "^0.11.0",
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@tanstack/react-query": ">=5.61.0",
    "@types/node": "^22",
    "rollup": "^4.27.4",
    "rollup-plugin-summary": "^3.0.0",
    "ts-lit-plugin": "^2.0.2",
    "tsup": "^8.3.5",
    "typescript": "^5"
  }
}
